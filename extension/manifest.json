{
  "manifest_version": 3,
  "name": "Browserllama",
  "version": "1.0",
  "description": "Web enhancement extension that uses local llms.",
  "permissions": ["tabs","nativeMessaging","scripting", "activeTab","storage"],
  "background": {
    "service_worker": "./background.js"
   },
  "action": {
    "default_title": "Browserllama",
    "default_popup": "home.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["oninstall.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "./assets/browserllama logo 128.png",
    "48": "./assets/browserllama logo 48.png"
  }
}
